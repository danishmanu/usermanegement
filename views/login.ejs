<%- include("./partials/header") -%>
<div class="container-fluid d-flex align-items-center justify-content-center" style="height: 100vh;">

     <div class="form-group  bg-dark text-light p-5" style="border-radius: 30px; width: 300px;">

         <form action="/login" method="post" >
             <div class=" d-flex justify-content-center ">
             <h3>LOG IN Page</h3>
            
           
         </div>
             <label for="">username</label>
             <input type="text" name="username" class="form-control mt-1" id="" value="" placeholder="Enter a Username" required>
             <label class="mt-3 text-start" for="">password</label>
             <input type="password" name="password" class="form-control mt-1" id="" value="" placeholder="Enter your password" required>
             <p class="text text-danger"><%=locals.message ? message:null %></p>
             <div class=" d-flex justify-content-center align-items-center mt-2">

             <input   type="submit" class="btn btn-primary text-center px-4  mt-3 " style="border-radius: 10px;" value="submit">
             
         </div>
         <p>Don't have account? <a href="/signup">Signup</a></p>
         </form>
     </div>

</div>
<%- include("./partials/footer") -%>
 
 